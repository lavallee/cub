#!/usr/bin/env bash
#
# cub-init - Initialize a project for cub
#
# DEPRECATED: This script is deprecated. Use 'cub init' instead.
#             This wrapper is kept for backwards compatibility.
#
set -euo pipefail

CUB_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"

# Colors
YELLOW='\033[1;33m'
NC='\033[0m'

# Show deprecation notice
echo -e "${YELLOW}[cub-init] DEPRECATED: cub-init is deprecated. Use 'cub init' instead.${NC}" >&2
echo -e "${YELLOW}[cub-init] This command will be removed in a future release.${NC}" >&2
echo "" >&2

# Forward all arguments to 'cub init'
exec "${CUB_DIR}/cub" init "$@"
